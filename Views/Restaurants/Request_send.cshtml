@model Zero_Hunger.DTOs.RestaurantDTO

@{
    ViewBag.Title = "Request_send";
}

<h2>Send Request</h2>

<style>
    form {
        width: 50%;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        display: block;
    }

    input[type="text"],
    input[type="date"],
    input[type="hidden"] {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        color: #dc3545;
    }

    .back-link {
        margin-top: 20px;
        display: block;
        text-align: center;
    }
</style>

<form class="border" action="" method="post">
    <div class="form-group">
        <label>Food Type:</label>

        <select class="form-control" id="foor_type" name="foor_type" required>
            <option selected disabled value="">Select</option>
            <option value="pizza">Pizza</option>
            <option value="burger">Burger</option>
            <option value="pasta">Pasta</option>
            <option value="sushi">Sushi</option>
            <option value="salad">Salad</option>
        </select>

        <span class="text-danger">@Html.ValidationMessage("food_type")</span>
    </div>

    <div class="form-group">
        <input type="hidden" class="form-control" id="res_id" name="rest_id" value="@ViewBag.res_idd" />
        <input type="hidden" class="form-control" id="email" name="email" value="@Model.res_email" />
        <input type="hidden" class="form-control" id="phone" name="phone" value="@Model.res_phone" />
        <input type="hidden" class="form-control" id="location" name="location" value="@Model.res_location" />
        <input type="hidden" class="form-control" id="res_id" name="res_id" value="@Model.restaurants_id" />
        <input type="hidden" class="form-control" id="status" name="status" value="pending" />
    </div>

    <div class="form-group">
        <label>Quantity:</label>
        <input type="number" class="form-control" name="quantity" placeholder="Enter Quantity" required>
        <span class="text-danger">@Html.ValidationMessage("quantity")</span>
    </div>

    <div class="form-group">
        <label>Max Prevention Time (minutes):</label>
        <input type="number" class="form-control" min="0" step="1" id="max_preservation_time" name="max_preservation_time" placeholder="Enter Max Preservation Time" required>
        <span class="text-danger">@Html.ValidationMessage("max_preservation_time")</span>
    </div>

    <div class="form-group">
        <label>Details Food</label>
        <input type="text" class="form-control" name="details_food" placeholder="Enter Details" required>
        <span class="text-danger">@Html.ValidationMessage("details_food")</span>
    </div>

    <div class="form-group">
        <label>Date</label>
        <input type="hidden" class="form-control" id="date" name="date_of_order" value="@ViewBag.now">
        <p>Date time:@ViewBag.now</p>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="">
    @Html.ActionLink("Back to List", "Dashboard")
</div>
